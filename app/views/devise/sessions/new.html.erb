<div class="container">

  <div class="col-md-4"></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin col-md-4", role: "form"} ) do |f| %>

    <h2 class="form-signin-heading">Log in</h2>
    
    <div><%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, required: true, class: "form-control" %></div>

    <div><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %></div>

    <% if devise_mapping.rememberable? -%>
      <div>
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          Remember Me
        <% end  %>
      </div>
    <% end -%>

    <div><%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %></div>

  <% end %>

</div>
